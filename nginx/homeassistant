server {
    listen  443 ssl;
    ssl_certificate /etc/letsencrypt/live/homeassistant.gssn.net/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/homeassistant.gssn.net/privkey.pem;
	server_name	homeassistant.gssn.net;

	location / {
		proxy_pass http://127.0.0.1:8123;
        proxy_set_header Host $host;
        proxy_http_version 1.1;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header    Upgrade     $http_upgrade;
        proxy_set_header    Connection  "upgrade";
	}
}
